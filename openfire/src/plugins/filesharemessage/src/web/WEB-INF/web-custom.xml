<?xml version='1.0' encoding='ISO-8859-1'?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <!-- Servlets -->
    <servlet>
        <servlet-name>MessageNotificationServlet</servlet-name>
        <servlet-class>com.anh.openfire.plugin.MessageNotificationServlet</servlet-class>
    </servlet>
    
    <!-- Servlet mappings -->
    <servlet-mapping>
        <servlet-name>MessageNotificationServlet</servlet-name>
        <url-pattern>/notify</url-pattern>
    </servlet-mapping>
    
</web-app>
